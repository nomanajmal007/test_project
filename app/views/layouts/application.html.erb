<!DOCTYPE html>
<html>
  <head>
    <title>TestProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%=root_url%>">Test Project</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="<%=root_url%>">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="<%=users_path%>">Users</a>
        </li>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="<%=businesses_path%>">Businesses</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="<%=tasks_path%>">Tasks</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="<%=get_businesses_path%>">User Businesses</a>
        </li>
       
      </ul>
      <% if current_user.is_a?(User)%>
        <% if current_user.admin?%>
          <b class ="text-light px-2" > Admin </b>
        <% elsif current_user.support?%>
          <b class ="text-light px-2" > Support </b>
        <% elsif current_user.writingbroker?%>
          <b class ="text-light px-2" > Writing Broker </b>
        <% end %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-success" %> 
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-outline-success" %>
        <%= link_to "Register", new_user_registration_path, class: "btn btn-outline-success"%>
      <% end %>
    </div>
  </div>
</nav>

  <% if !notice.blank? %>
  <strong> <p class="notice"><%= notice %></p></strong>
  <% end %>

  <% if !alert.blank? %>
    <strong><p class="alert"><%= alert %></p></strong>
  <% end %>

  <div class="container" >
    <%= yield %>
  </div>
  </body>

</html>
