<h1>Create a new Business</h1>


<%= form_for(@business) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  