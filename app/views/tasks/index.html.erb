<div class="Container">

    
    <h1 class="my-3">Hi, <%= current_user.first_name%> </h1>

    <h1>Welcome to Task Home Page</h1>

    <br>
    <%= link_to "Create a new task",new_task_path, class: "btn btn-outline-success" %>
    <br>
    <br>
    <br>
    <h2>Tasks:</h2>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Due Date</th>
            <th scope="col">Task Type</th>
            <th scope="col">Business Name</th>
            <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                <th scope="row"><%="#{task.id}"%></th>
                <td><%= link_to task.title, task_path(task.id)%></td>
                <td><%= task.due_date%></td>
                <td><%= task.task_type%></td>
                <td><%= Business.find(task.business_id).name%></td>
                <td> 
                    <%= link_to "Edit",edit_task_path(task.id), class: "btn btn-outline-success" %>
                    <%= link_to "Delete",task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-outline-success" %>
                </td>
                </tr>
            <%end%>
        </tbody>
    </table>

</div>